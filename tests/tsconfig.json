{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "noEmit": true,
        "incremental": false,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "#mocks/*": ["./mocks/*"],
            "#root/*": ["../src/*"],
            "#lib/*": ["../src/lib/*"]
        }
    },
    "include": [".", "../src/**/*"],
    "exclude": ["../dist/**/*"],
    "references": [{ "path": "../src" }]
}
